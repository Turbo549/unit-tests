<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TrustFrameworkPolicy xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://schemas.microsoft.com/online/cpim/schemas/2013/06" PolicySchemaVersion="0.3.0.0" 
  TenantId="yourtenant.onmicrosoft.com" 
  PolicyId="B2C_1A_CT_DoesClaimExist" 
  PublicPolicyUri="http://yourtenant.onmicrosoft.com/B2C_1A_CT_DoesClaimExist">

  <BasePolicy>
    <TenantId>yourtenant.onmicrosoft.com</TenantId>
    <PolicyId>B2C_1A_TrustFrameworkExtensions</PolicyId>
  </BasePolicy>

  <BuildingBlocks>
    <ClaimsSchema>
      <ClaimType Id="stringValue">
        <DisplayName>stringValue</DisplayName>
        <DataType>string</DataType>
      </ClaimType>
      <ClaimType Id="stringValueExists">
        <DisplayName>stringValueExists</DisplayName>
        <DataType>boolean</DataType>
      </ClaimType>
      <ClaimType Id="intValue">
        <DisplayName>intValue</DisplayName>
        <DataType>int</DataType>
      </ClaimType>
      <ClaimType Id="intValueExists">
        <DisplayName>intValueExists</DisplayName>
        <DataType>boolean</DataType>
      </ClaimType>
      <ClaimType Id="booleanValue">
        <DisplayName>active</DisplayName>
        <DataType>boolean</DataType>
        <AdminHelpText>Add help text here</AdminHelpText>
        <UserHelpText>Add help text here</UserHelpText>
      </ClaimType>
      <ClaimType Id="booleanValueExists">
        <DisplayName>booleanValueExists</DisplayName>
        <DataType>boolean</DataType>
      </ClaimType>
      <ClaimType Id="longValue">
        <DisplayName>longValue</DisplayName>
        <DataType>long</DataType>
        <AdminHelpText>Add help text here</AdminHelpText>
        <UserHelpText>Add help text here</UserHelpText>
      </ClaimType>
      <ClaimType Id="longValueExists">
        <DisplayName>longValueExists</DisplayName>
        <DataType>boolean</DataType>
      </ClaimType>
      <ClaimType Id="dateValue">
        <DisplayName>birthDate</DisplayName>
        <DataType>date</DataType>
        <UserInputType>DateTimeDropdown</UserInputType>
      </ClaimType>
      <ClaimType Id="dateValueExists">
        <DisplayName>dateValueExists</DisplayName>
        <DataType>boolean</DataType>
      </ClaimType>
      <ClaimType Id="stringCollectionValue">
        <DisplayName>stringCollectionValue</DisplayName>
        <DataType>stringCollection</DataType>
      </ClaimType>
      <ClaimType Id="stringCollectionValueExists">
        <DisplayName>stringCollectionValueExists</DisplayName>
        <DataType>boolean</DataType>
      </ClaimType>
    </ClaimsSchema>
    <ClaimsTransformations>
      <ClaimsTransformation Id="CheckString" TransformationMethod="DoesClaimExist">
        <InputClaims>
          <InputClaim ClaimTypeReferenceId="stringValue" TransformationClaimType="inputClaim" />
        </InputClaims>
        <OutputClaims>
          <OutputClaim ClaimTypeReferenceId="stringValueExists" TransformationClaimType="outputClaim" />
        </OutputClaims>
      </ClaimsTransformation>
      <ClaimsTransformation Id="CheckInt" TransformationMethod="DoesClaimExist">
        <InputClaims>
          <InputClaim ClaimTypeReferenceId="intValue" TransformationClaimType="inputClaim" />
        </InputClaims>
        <OutputClaims>
          <OutputClaim ClaimTypeReferenceId="intValueExists" TransformationClaimType="outputClaim" />
        </OutputClaims>
      </ClaimsTransformation>
      <ClaimsTransformation Id="CheckBoolean" TransformationMethod="DoesClaimExist">
        <InputClaims>
          <InputClaim ClaimTypeReferenceId="booleanValue" TransformationClaimType="inputClaim" />
        </InputClaims>
        <OutputClaims>
          <OutputClaim ClaimTypeReferenceId="booleanValueExists" TransformationClaimType="outputClaim" />
        </OutputClaims>
      </ClaimsTransformation>
      <ClaimsTransformation Id="CheckLong" TransformationMethod="DoesClaimExist">
        <InputClaims>
          <InputClaim ClaimTypeReferenceId="longValue" TransformationClaimType="inputClaim" />
        </InputClaims>
        <OutputClaims>
          <OutputClaim ClaimTypeReferenceId="longValueExists" TransformationClaimType="outputClaim" />
        </OutputClaims>
      </ClaimsTransformation>
      <ClaimsTransformation Id="CheckDate" TransformationMethod="DoesClaimExist">
        <InputClaims>
          <InputClaim ClaimTypeReferenceId="dateValue" TransformationClaimType="inputClaim" />
        </InputClaims>
        <OutputClaims>
          <OutputClaim ClaimTypeReferenceId="dateValueExists" TransformationClaimType="outputClaim" />
        </OutputClaims>
      </ClaimsTransformation>
      <ClaimsTransformation Id="sCheckStringCollection" TransformationMethod="DoesClaimExist">
        <InputClaims>
          <InputClaim ClaimTypeReferenceId="stringCollectionValue" TransformationClaimType="inputClaim" />
        </InputClaims>
        <OutputClaims>
          <OutputClaim ClaimTypeReferenceId="stringCollectionValueExists" TransformationClaimType="outputClaim" />
        </OutputClaims>
      </ClaimsTransformation>
    </ClaimsTransformations>
  </BuildingBlocks>

  <ClaimsProviders>
    <ClaimsProvider>
      <DisplayName>Unit tests</DisplayName>
      <TechnicalProfiles>
        <TechnicalProfile Id="ExperimentalTechnicalProfile">
          <DisplayName>Unit test</DisplayName>
          <Protocol Name="Proprietary" Handler="Web.TPEngine.Providers.ClaimsTransformationProtocolProvider, Web.TPEngine, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null" />
          <InputClaims>
            <InputClaim ClaimTypeReferenceId="intValue" DefaultValue="123456789" />
            <InputClaim ClaimTypeReferenceId="stringValue" DefaultValue="Helo world" />
          </InputClaims>
          <OutputClaims>
            <OutputClaim ClaimTypeReferenceId="stringValue" />
            <OutputClaim ClaimTypeReferenceId="stringValueExists" />
            <OutputClaim ClaimTypeReferenceId="intValue" />
            <OutputClaim ClaimTypeReferenceId="intValueExists" />
            <OutputClaim ClaimTypeReferenceId="booleanValue" />
            <OutputClaim ClaimTypeReferenceId="booleanValueExists" />
            <OutputClaim ClaimTypeReferenceId="longValue" />
            <OutputClaim ClaimTypeReferenceId="longValueExists" />
            <OutputClaim ClaimTypeReferenceId="dateValue" />
            <OutputClaim ClaimTypeReferenceId="dateValueExists" />
            <OutputClaim ClaimTypeReferenceId="stringCollectionValue" />
            <OutputClaim ClaimTypeReferenceId="stringCollectionValueExists" />
          </OutputClaims>
          <OutputClaimsTransformations>
            <OutputClaimsTransformation ReferenceId="CheckString" />
            <OutputClaimsTransformation ReferenceId="CheckInt" />
            <OutputClaimsTransformation ReferenceId="CheckBoolean" />
            <OutputClaimsTransformation ReferenceId="CheckLong" />
            <OutputClaimsTransformation ReferenceId="CheckDate" />
            <OutputClaimsTransformation ReferenceId="sCheckStringCollection" />
          </OutputClaimsTransformations>
          <UseTechnicalProfileForSessionManagement ReferenceId="SM-Noop" />
        </TechnicalProfile>
      </TechnicalProfiles>
    </ClaimsProvider>
  </ClaimsProviders>

  <UserJourneys>
    <UserJourney Id="UnitTestJourney">
      <OrchestrationSteps>
        <OrchestrationStep Order="1" Type="ClaimsExchange">
          <ClaimsExchanges>
            <ClaimsExchange Id="ExperimentalTechnicalProfile" TechnicalProfileReferenceId="ExperimentalTechnicalProfile" />
          </ClaimsExchanges>
        </OrchestrationStep>
        <OrchestrationStep Order="2" Type="SendClaims" CpimIssuerTechnicalProfileReferenceId="JwtIssuer" />
      </OrchestrationSteps>
    </UserJourney>
  </UserJourneys>

  <RelyingParty>
    <DefaultUserJourney ReferenceId="UnitTestJourney" />
    <TechnicalProfile Id="PolicyProfile">
      <DisplayName>PolicyProfile</DisplayName>
      <Protocol Name="OpenIdConnect" />
      <OutputClaims>
        <OutputClaim ClaimTypeReferenceId="objectId" PartnerClaimType="sub" DefaultValue="1234" />
        <OutputClaim ClaimTypeReferenceId="tenantId" AlwaysUseDefaultValue="true" DefaultValue="{Policy:TenantObjectId}" />

        <!-- Unit test claims-->
        <OutputClaim ClaimTypeReferenceId="stringValue" />
        <OutputClaim ClaimTypeReferenceId="stringValueExists" />
        <OutputClaim ClaimTypeReferenceId="intValue" />
        <OutputClaim ClaimTypeReferenceId="intValueExists" />
        <OutputClaim ClaimTypeReferenceId="booleanValue" />
        <OutputClaim ClaimTypeReferenceId="booleanValueExists" />
        <OutputClaim ClaimTypeReferenceId="longValue" />
        <OutputClaim ClaimTypeReferenceId="longValueExists" />
        <OutputClaim ClaimTypeReferenceId="dateValue" />
        <OutputClaim ClaimTypeReferenceId="dateValueExists" />
        <OutputClaim ClaimTypeReferenceId="stringCollectionValue" />
        <OutputClaim ClaimTypeReferenceId="stringCollectionValueExists" />
      </OutputClaims>
      <SubjectNamingInfo ClaimType="sub" />
    </TechnicalProfile>
  </RelyingParty>
</TrustFrameworkPolicy>